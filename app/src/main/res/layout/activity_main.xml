<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3BFC7"
    tools:context="br.com.flip.MainActivity"
    >

  <com.flip.connect.widget.FlipAuthenticationButton
      android:id="@+id/connectButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      />

  <com.flip.connect.widget.FlipCheckoutButton
      android:id="@+id/checkoutButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/connectButton"
      android:layout_alignStart="@+id/connectButton"
      android:layout_below="@+id/connectButton"
      android:layout_marginTop="18dp"
      />

</RelativeLayout>
